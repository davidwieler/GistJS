<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title><%- cmsInfo.name %> Login</title>

	<!-- Global stylesheets -->
	<link href="https://fonts.googleapis.com/css?family=Roboto:400,300,100,500,700,900" rel="stylesheet" type="text/css">
	<link href="/gistjs-assets/css/icons/icomoon/styles.css" rel="stylesheet" type="text/css">
	<link href="/gistjs-assets/css/bootstrap.css" rel="stylesheet" type="text/css">
	<link href="/gistjs-assets/css/core.css" rel="stylesheet" type="text/css">
	<link href="/gistjs-assets/css/components.css" rel="stylesheet" type="text/css">
	<link href="/gistjs-assets/css/colors.css" rel="stylesheet" type="text/css">
	<!-- /global stylesheets -->

	<!-- Core JS files -->
	<script type="text/javascript" src="/gistjs-assets/js/plugins/loaders/pace.min.js"></script>
	<script type="text/javascript" src="/gistjs-assets/js/core/libraries/jquery.min.js"></script>
	<script type="text/javascript" src="/gistjs-assets/js/core/libraries/bootstrap.min.js"></script>
	<script type="text/javascript" src="/gistjs-assets/js/plugins/loaders/blockui.min.js"></script>
	<script type="text/javascript" src="/gistjs-assets/js/plugins/ui/nicescroll.min.js"></script>
	<script type="text/javascript" src="/gistjs-assets/js/plugins/ui/drilldown.js"></script>
	<!-- /core JS files -->


	<!-- Theme JS files -->
	<script type="text/javascript" src="/gistjs-assets/js/core/app.js"></script>
	<!-- /theme JS files -->

</head>

<body class="navbar-bottom login-container">

	<!-- Main navbar -->
	<div class="navbar navbar-inverse">
		<div class="navbar-header">
			<a class="navbar-brand" href="index.html"><%- cmsInfo.name %></a>

			<ul class="nav navbar-nav pull-right visible-xs-block">
				<li><a data-toggle="collapse" data-target="#navbar-mobile"><i class="icon-grid3"></i></a></li>
			</ul>
		</div>

		<div class="navbar-collapse collapse" id="navbar-mobile">
			<div class="navbar-right">
				<ul class="nav navbar-nav navbar-right">
					<li>
						<a href="<%- cmsInfo.url %>">
							Back to website
						</a>
					</li>
				</ul>
			</div>
		</div>
	</div>
	<!-- /main navbar -->


	<!-- Page container -->
	<div class="page-container">

		<!-- Page content -->
		<div class="page-content">

			<!-- Main content -->
			<div class="content-wrapper">

				<!-- Simple login form -->
				<form action="forgot-password" class="login-form" method="post">
					<div class="panel panel-body">
						<div class="text-center">
							<div class="icon-object border-slate-300 text-slate-300"><i class="icon-reading"></i></div>
							<h5 class="content-group">Forgot your password? <small class="display-block">Enter your username or email below</small></h5>
						</div>
						<%
							if (typeof data.message !== 'undefined') {
								var message = data.message;
								if (typeof data.message.message !== 'undefined') {
									var message = data.message.message;
								}
								if (message.length >= 1) {
									%><div class="alert alert-danger"><%= message %></div><%
								}
							}
						%>
						<div class="form-group has-feedback has-feedback-left">
							<input type="text" class="form-control" placeholder="Username or Email" name="user" value="">
							<div class="form-control-feedback">
								<i class="icon-user text-muted"></i>
							</div>
						</div>

						<div class="form-group">
							<button type="submit" class="btn bg-pink-400 btn-block">Submit <i class="icon-circle-right2 position-right"></i></button>
							<br />
							<a href="/<%- cmsInfo.adminLocation %>/login" class="display-block"><i class="icon-circle-left2 position-left"></i> Back to login...</a>
						</div>
					</div>
				</form>
				<!-- /simple login form -->

			</div>
			<!-- /main content -->

		</div>
		<!-- /page content -->

	</div>
	<!-- /page container -->

</body>
</html>
